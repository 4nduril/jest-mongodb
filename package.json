{
  "name": "jest-mongodb",
  "version": "0.0.0",
  "description": "Run your tests using Jest & MongoDB in Memory server",
  "license": "MIT",
  "repository": "vladgolubev/jest-mongodb",
  "author": {
    "name": "Vlad Holubiev",
    "email": "golubev.vld@gmail.com",
    "url": "vladholubiev.com"
  },
  "engines": {
    "node": ">=8"
  },
  "private": true,
  "scripts": {
    "lint": "eslint . --fix",
    "test": "jest"
  },
  "keywords": [
    "jest",
    "mongodb",
    "mongodb local",
    "jest preset",
    "jest environment"
  ],
  "dependencies": {
    "cwd": "0.10.0",
    "mongodb": "3.1.10",
    "mongodb-memory-server": "2.9.3"
  },
  "devDependencies": {
    "eslint": "5.12.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3"
  },
  "jest": {
    "preset": "./jest-preset.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{html,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  }
}
